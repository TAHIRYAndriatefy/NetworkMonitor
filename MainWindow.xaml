<Window x:Class="NetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Monitor Live" 
        Width="800" Height="600" 
        MinWidth="600" MinHeight="400"
        Topmost="True"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        Icon="app.ico">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}" Margin="0,0,0,0">
            <StackPanel Orientation="Vertical" Margin="16">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="{Binding SSID}" 
                               FontSize="14" FontWeight="Bold" 
                               Foreground="{StaticResource TextColor}"
                               Margin="0,0,20,0"/>
                    <TextBlock Text="{Binding DownloadSpeed, StringFormat='DL: {0:F2} KB/s'}" 
                               FontSize="12"
                               Foreground="{StaticResource TextColor}"
                               Margin="0,0,15,0"/>
                    <TextBlock Text="{Binding UploadSpeed, StringFormat='UL: {0:F2} KB/s'}" 
                               FontSize="12"
                               Foreground="{StaticResource TextColor}"
                               Margin="0,0,15,0"/>
                    <TextBlock Text="{Binding CurrentTime}" 
                               FontSize="12"
                               Foreground="{StaticResource TextColor}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Clients: " FontSize="11" Foreground="{StaticResource TextColor}"/>
                    <TextBlock Text="{Binding ConnectedClients}" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                    <Separator Width="1" Margin="10,0"/>
                    <TextBlock Text="ThÃ¨me: " FontSize="11" Foreground="{StaticResource TextColor}" Margin="5,0,5,0"/>
                    <ComboBox ItemsSource="{Binding Themes}" SelectedItem="{Binding CurrentTheme}" Width="90" Height="22"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="2" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="0" ItemsSource="{Binding Devices}" 
                      SelectedItem="{Binding SelectedDevice}"
                      Margin="0,0,8,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="IP" DisplayMemberBinding="{Binding IP}" Width="120"/>
                        <GridViewColumn Header="MAC" DisplayMemberBinding="{Binding MAC}" Width="160"/>
                        <GridViewColumn Header="Heure" DisplayMemberBinding="{Binding Time}" Width="100"/>
                        <GridViewColumn Header="BloquÃ©" DisplayMemberBinding="{Binding IsBlocked}" Width="60"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Grid.Column="1">
                <Button Content="ðŸ”’ Bloquer" Command="{Binding BlockCommand}" Style="{StaticResource StylizedButton}"/>
                <Button Content="ðŸ”“ DÃ©bloquer" Command="{Binding UnblockCommand}" Style="{StaticResource StylizedButton}"/>
                <Button Content="ðŸ”„ RafraÃ®chir" Command="{Binding RefreshCommand}" Style="{StaticResource StylizedButton}"/>
                <TextBlock Text="SÃ©lectionnez un appareil." 
                           TextWrapping="Wrap" 
                           FontSize="11"
                           Foreground="{StaticResource TextColor}"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
